# Database Configuration
DB_USER=interview_user
DB_PASSWORD=interview_pass
DB_NAME=interview_prep

# Backend Configuration
NODE_ENV=development
GIN_MODE=debug

# Authentication - Single User (legacy)
AUTH_USERNAME=admin
AUTH_PASSWORD=password

# Authentication - Multi User (new)
# Comma-separated list of usernames and passwords
# Each username at index i corresponds to password at index i
AUTH_USERS=admin,john,jane,bob
AUTH_PASSWORDS=password123,john_pass,jane_pass,bob_pass

JWT_SECRET=your_jwt_secret_key_here

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080/api/v1

# OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id
REACT_APP_APPLE_CLIENT_ID=your-apple-client-id

# Production Configuration (uncomment for production)
# NODE_ENV=production
# GIN_MODE=release
# REACT_APP_API_URL=https://your-backend-domain.com/api/v1 